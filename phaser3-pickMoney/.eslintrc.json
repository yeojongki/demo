{
  "parser": "babel-eslint",
  "extends": "standard",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true
  },
  "globals": {
    "Phaser": true
  },
  "settings": {
    "import/core-modules": [ "phaser" ],
    "import/parser": "webpack",
    "import/resolver": { "webpack": {} }
  }
}
